#include<iostream>

using std :: cout;
using std :: cin;
struct entry
{
	char name[20];
	int roll;
}g[50];

int main()
{
	int i,j,b,k=0;
	char n[20];
	while(k==0)
	{
	for(i=0;i<50;i++)
	{
		cout<<"Enter name\n";
		for(b=0;n[b]!='\0';b++)
		cin>>n[b];
		cout<<"Enter roll no.\n";
		cin>>j;
		for(b=0;n[b]!='\0';b++)
		g[i].name[b]=n[b];
		g[i].roll=j;
	}
	cout<<"To continue press 0";
	cin>>k;
	}
	for(k=0;k<=i;k++)
	cout<<g[k].name<<"\t"<<g[k].roll<<"\n";
	return 0;
}





